{
  "ts-node": {
    "transpileOnly": true,
    "pretty": false
  },

  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "moduleResolution": "Node16",
    "experimentalDecorators": true,

    "outDir": "dist",

    "allowJs": false,
    "diagnostics": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true
  }
}
